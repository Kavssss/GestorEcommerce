package frontend.utils;

import java.math.BigDecimal;
import java.text.NumberFormat;
import java.util.Locale;

import javafx.scene.control.TextField;

public class DoubleUtils {

	public static String formataDouble(TextField textField) {
		BigDecimal bdValue = BigDecimal.valueOf(Double.valueOf(textField.getText()));
		Locale brazil = new Locale("pt", "BR");
        NumberFormat nf = NumberFormat.getCurrencyInstance(brazil);
        return nf.format(bdValue);
	}
	
}
