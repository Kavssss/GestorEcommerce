package utils;

import javafx.util.StringConverter;

public class DataUtils {

	public static StringConverter addBarraData() {
		StringConverter<String> dateConverter = new StringConverter<String>() {
			@Override
			public String toString(String object) {
				return object;
			}
	
			@Override
			public String fromString(String string) {
				if (string.length() == 2 && !string.contains("/") || string.length() == 5)
					string += "/";
				return string;
			}
		};
		return dateConverter;
	}

}
