package frontend.utils;

import java.text.NumberFormat;
import java.util.Locale;

import javafx.scene.control.TextField;
import javafx.scene.input.KeyEvent;

public class DoubleUtils {

	public static void formataDouble(TextField textField, KeyEvent event) {
		Locale brazil = new Locale("pt", "BR");
        NumberFormat nf = NumberFormat.getCurrencyInstance(brazil);
        String formattedValue = nf.format(textField.getText());
		textField.setText(formattedValue);
		textField.positionCaret(textField.getLength());
	}
	
}
